<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.og.tilappopen.InfoActivity"
    tools:showIn="@layout/activity_info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/raffael"
            android:id="@+id/background"
            tools:ignore="ContentDescription"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textLayout">

            <View
                android:id="@+id/centerShim"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:text="@string/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:id="@+id/title"
                tools:ignore="HardcodedText"
                android:textSize="@dimen/titleSize"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:background="@android:color/background_light"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <TextView
                android:text="@string/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subTitleSize"
                android:textStyle="normal|bold"
                android:id="@+id/subTitle"
                android:textAlignment="center"
                android:background="@android:color/background_light"
                android:alpha="0.7"
                android:textColor="@android:color/black"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:layout_alignRight="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_alignEnd="@+id/title"
                android:paddingBottom="5dp" />

            <TextView
                android:text="@string/aboutThisApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/marginHalf"
                android:textSize="@dimen/textSize"
                android:id="@+id/aboutThisApp"
                android:textAlignment="center"
                android:background="@android:color/background_light"
                android:alpha="0.7"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/marginFull"
                android:layout_below="@+id/subTitle"
                android:layout_alignLeft="@+id/title"
                android:layout_alignRight="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_alignEnd="@+id/title"
                />

            <Button
                android:text="@string/backToMain"
                android:textSize="@dimen/buttonTextSize"
                android:padding="@dimen/paddingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backToMainButton"
                android:alpha="0.7"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@+id/aboutThisApp"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@+id/title"
                android:layout_alignRight="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_alignEnd="@+id/title"
                android:layout_marginTop="@dimen/marginFull"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="@string/myWebsite"
                android:textSize="@dimen/buttonTextSize"
                android:padding="@dimen/paddingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goToSiteButton"
                android:alpha="0.7"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@+id/backToMainButton"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_marginTop="@dimen/marginFull"
                android:textColor="@android:color/background_light"
                android:layout_toLeftOf="@+id/centerShim"
                android:layout_toStartOf="@+id/centerShim"
                android:layout_marginRight="@dimen/marginHalf"
                android:layout_marginEnd="@dimen/marginHalf"/>

            <Button
                android:text="@string/githubCode"
                android:textSize="@dimen/buttonTextSize"
                android:padding="@dimen/paddingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goToGithubButton"
                android:alpha="0.7"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@+id/backToMainButton"
                android:layout_centerHorizontal="true"
                android:layout_alignRight="@+id/title"
                android:layout_alignEnd="@+id/title"
                android:layout_marginTop="@dimen/marginFull"
                android:textColor="@android:color/background_light"
                android:layout_toRightOf="@+id/centerShim"
                android:layout_toEndOf="@+id/centerShim"
                android:layout_marginLeft="@dimen/marginHalf"
                android:layout_marginStart="@dimen/marginHalf" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
